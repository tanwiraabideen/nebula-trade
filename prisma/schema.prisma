generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  balanceUSD   Float
  competitions Competition[]
  transactions Transaction[]
  userTokens   UserToken[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Competition {
  id          String   @id @default(cuid())
  name        String
  description String
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Token {
  id                       String   @id
  symbol                   String
  name                     String
  icon                     String
  price                    Float
  marketCapRank            Int?
  priceChange1h            Float?
  priceChange7d            Float?
  priceChange30d           Float?
  priceChangePercentage24h Float?
  lastUpdated              DateTime

  @@index([symbol])
  @@index([marketCapRank])
}

model Transaction {
  id        String   @id @default(cuid())
  type      String // "buy" or "sell"
  user      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  tokenId   String // This would be the API's token ID
  amount    Float
  createdAt DateTime @default(now())

  @@index([userEmail])
}

model UserToken {
  userId     String
  tokenId    String
  tokensHeld Float
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@id([userId, tokenId])
}
